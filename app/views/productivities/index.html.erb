<p id="notice"><%= notice %></p>

<h1>Productivities</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Focus</th>
      <th>Prioritie1</th>
      <th>Prioritie2</th>
      <th>Prioritie3</th>
      <th>Prioritie4</th>
      <th>Prioritie5</th>
      <th>To avoid1</th>
      <th>To avoid2</th>
      <th>To avoid3</th>
      <th>Learn</th>
      <th>Grateful1</th>
      <th>Grateful2</th>
      <th>Grateful3</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productivities.each do |productivity| %>
      <tr>
        <td><%= productivity.day %></td>
        <td><%= productivity.focus %></td>
        <td><%= productivity.prioritie1 %></td>
        <td><%= productivity.prioritie2 %></td>
        <td><%= productivity.prioritie3 %></td>
        <td><%= productivity.prioritie4 %></td>
        <td><%= productivity.prioritie5 %></td>
        <td><%= productivity.to_avoid1 %></td>
        <td><%= productivity.to_avoid2 %></td>
        <td><%= productivity.to_avoid3 %></td>
        <td><%= productivity.learn %></td>
        <td><%= productivity.grateful1 %></td>
        <td><%= productivity.grateful2 %></td>
        <td><%= productivity.grateful3 %></td>
        <td><%= productivity.note %></td>
        <td><%= link_to 'Show', productivity %></td>
        <td><%= link_to 'Edit', edit_productivity_path(productivity) %></td>
        <td><%= link_to 'Destroy', productivity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Productivity', new_productivity_path %>
